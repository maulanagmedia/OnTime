<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/_16sdp"
    tools:context=".menu_reimburse.DetailReimburseActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/sv_detail">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rl_nama">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nama"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="#81000000"
                    android:id="@+id/tv_ket_nama"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nur Rohim"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:layout_below="@+id/tv_ket_nama"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="#000"
                    android:id="@+id/tv_nama"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_12sdp"
                android:orientation="horizontal">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tanggal Pembayaran"
                        android:textSize="@dimen/_12sdp"
                        android:textColor="#81000000"
                        android:id="@+id/tv_ket_tgl"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:text="18 juni 2020"
                        android:layout_below="@+id/tv_ket_tgl"
                        android:textSize="@dimen/_12sdp"
                        android:textColor="#000"
                        android:id="@+id/tv_tgl_bayar"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nominal"
                        android:textSize="@dimen/_12sdp"
                        android:textColor="#81000000"
                        android:id="@+id/tv_ket_nominal"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:text="Rp 20.000"
                        android:layout_below="@+id/tv_ket_nominal"
                        android:textSize="@dimen/_12sdp"
                        android:textColor="#000"
                        android:id="@+id/tv_nominal"/>
                </RelativeLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_marginTop="@dimen/_16sdp"
                android:layout_marginBottom="@dimen/_16sdp"
                android:background="#000"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rl_ket">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Keterangan"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="#81000000"
                    android:id="@+id/tv_ket_ket"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown"
                    android:layout_below="@+id/tv_ket_ket"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="#000"
                    android:id="@+id/tv_ket"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_marginTop="@dimen/_16sdp"
                android:layout_marginBottom="@dimen/_16sdp"
                android:background="#000"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_220sdp"
                android:id="@+id/rl_bukti">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Keterangan"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="#81000000"
                    android:id="@+id/tv_ket_bukti"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:layout_below="@+id/tv_ket_bukti"
                    android:id="@+id/img_bukti"
                    android:background="@drawable/bg_calender"
                    android:src="@drawable/gallery"
                    android:scaleType="centerInside"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:id="@+id/rl_button"
                android:layout_marginTop="@dimen/_16sdp"
                android:layout_marginBottom="@dimen/_16sdp">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_30sdp"
                    android:text="Tolak"
                    android:paddingRight="@dimen/_40sdp"
                    android:paddingLeft="@dimen/_40sdp"
                    android:textColor="@color/status_bar_red"
                    android:background="@drawable/bg_btn_tolak"
                    android:layout_marginRight="@dimen/_12sdp"
                    android:id="@+id/btn_tolak"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_30sdp"
                    android:text="Terima"
                    android:paddingRight="@dimen/_40sdp"
                    android:layout_toRightOf="@+id/btn_tolak"
                    android:paddingLeft="@dimen/_40sdp"
                    android:layout_marginLeft="@dimen/_12sdp"
                    android:textColor="#fff"
                    android:background="@drawable/bg_btn_terima"
                    android:id="@+id/btn_terima"/>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>